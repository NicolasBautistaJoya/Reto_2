<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Pizza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Menu_pizza">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pizza"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/pizza_hawaiiana"></ImageView>

        <LinearLayout
            android:layout_width="213dp"
            android:layout_height="282dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomPizza1"
                android:layout_width="197dp"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:text="Pizza hawaiiana"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/descPizza1"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:text="Pizza de queso con piña y jamon"></TextView>

            <Button
                android:id="@+id/button"
                android:layout_width="138dp"
                android:layout_height="35dp"
                android:text="Comprar"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="165dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pizza2"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/pizza_pollo"></ImageView>

        <LinearLayout
            android:layout_width="213dp"
            android:layout_height="282dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomPizza2"
                android:layout_width="197dp"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:text="Pizza de pollo"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/descPizza2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:text="Pizza de queso con pollo y champiñones "></TextView>

            <Button
                android:id="@+id/button2"
                android:layout_width="138dp"
                android:layout_height="35dp"
                android:text="Comprar"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="295dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pizza3"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/pizza_tropical"></ImageView>

        <LinearLayout
            android:layout_width="213dp"
            android:layout_height="282dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomPizza3"
                android:layout_width="197dp"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:text="Pizza tropical"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/descPizza3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:text="Pizza de queso con frutas tropicales"></TextView>

            <Button
                android:id="@+id/button3"
                android:layout_width="138dp"
                android:layout_height="35dp"
                android:text="Comprar"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginTop="420dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pizza4"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/pizza_campesina"></ImageView>

        <LinearLayout
            android:layout_width="213dp"
            android:layout_height="166dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomPizza4"
                android:layout_width="197dp"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:text="Pizza campesina"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/descPizza4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:text="Pizza de queso con carne, mazorca y pimenton"></TextView>

            <Button
                android:id="@+id/button4"
                android:layout_width="138dp"
                android:layout_height="35dp"
                android:text="Comprar"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
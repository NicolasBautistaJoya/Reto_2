<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="317dp"
        android:layout_height="448dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:src="@drawable/hamburguesa" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:text="Hamburguesas al carbon 100% carne con aderezos variados"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/compHamb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="compHamb"
                android:text="COMPRAR" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:src="@drawable/pizza" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Pizza con toppins variados"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/compPizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPRAR" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:src="@drawable/hot_dog" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Perro calientes con salsas y aderezos al gusto"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/compHotdog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPRAR" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:src="@drawable/empanada" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="Empanda con rellenos variados"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/compEmpanada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPRAR" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/menu"
        android:layout_width="409dp"
        android:layout_height="642dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/volverHamb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:backgroundTint="#EAE4E4"
            android:text="Hamb"
            android:textSize="12sp"
            app:iconTint="@color/white"
            app:strokeColor="#FAF6F6" />

        <Button
            android:id="@+id/volverPizza"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="90sp"
            android:background="@color/white"
            android:text="Pizza"
            android:textSize="12sp" />

        <Button
            android:id="@+id/volverHot"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginLeft="177sp"
            android:background="@color/white"
            android:text="Hot"
            android:textSize="12sp" />

        <Button
            android:id="@+id/volverEmp"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginLeft="270sp"
            android:background="@color/white"
            android:text="Emp"
            android:textSize="12sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>